---
layout: default
---
<!--
  Unified Content List Layout

  This template provides a consistent way to display lists of content items (viewers, tutorials, code, data)
  using YAML data and the bold_first_sentence filter for automatic styling.

  Usage: Set layout: content_list in page front matter and provide content_items array with:
  - title: Item title/link text
  - url: Link to external resource
  - image: Path to item image
  - alt: Alt text for image
  - description: Item description (first sentence will be automatically bolded)

  The CSS classes (.viewer-entry, .code-entry, etc.) maintain existing styling.
-->

<div class="post">
  <header class="post-header">
    <h1 class="post-title">
      {% if site.enable_navbar_social %}
        {{ page.title }}
        <div class="social">
          <div class="contact-icons">
            {% include social.liquid %}
          </div>
        </div>
      {% else %}
        {{ page.title }}
      {% endif %}
    </h1>
    <p class="post-description">{{ page.description }}</p>
  </header>

  <article>
    <!-- Intro content before items -->
    {{ content }}

    <!-- Content items from YAML data -->
    {% if page.content_items %}
      {% for item in page.content_items %}
        <div class="{{ page.entry_class | default: 'content-entry' }}">
          <div class="{{ page.image_class | default: 'content-image' }}">
            <img src="{{ item.image | relative_url }}" alt="{{ item.alt }}" class="img-fluid">
          </div>
          <div class="{{ page.info_class | default: 'content-info' }}">
            {% if item.first_sentence_with_link %}
              <span class="first-sentence"
                ><a href="{{ item.url }}">{{ item.title }}</a>.</span
              >
              {{ item.remaining_description }}
            {% elsif item.first_sentence %}
              <span class="first-sentence">{{ item.first_sentence }}</span> {{ item.remaining_description }}
            {% else %}
              <a href="{{ item.url }}">{{ item.title }}</a>. {{ item.description }}
            {% endif %}
          </div>
        </div>
      {% endfor %}
    {% endif %}
  </article>
</div>
