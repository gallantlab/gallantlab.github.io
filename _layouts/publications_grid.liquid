---
layout: default
---
<!--
  Grid-Based Publications Layout

  Alternative layout for publications using a card-based grid system.
  This provides a more visual, modern presentation compared to the linear list layout.

  Features:
  - Responsive 2-3 column grid
  - Card-based design with hover effects
  - Larger, more prominent images
  - Better use of horizontal space
  - Maintains chronological sorting

  Usage: Set layout: publications_grid in page front matter
-->

<div class="post">
  <header class="post-header">
    <h1 class="post-title">
      {% if site.enable_navbar_social %}
        {{ page.title }}
        <div class="social">
          <div class="contact-icons">
            {% include social.liquid %}
          </div>
        </div>
      {% else %}
        {{ page.title }}
      {% endif %}
    </h1>
    <p class="post-description">{{ page.description }}</p>
  </header>

  <article>
    {% if page.publications %}
      <div class="publications-grid">
        {% assign sorted_pubs = page.publications | sort: 'date' | reverse %}
        {% for pub in sorted_pubs %}
          <div class="publication-card">
            <div class="card-image">
              <a href="{{ pub.url }}" target="_blank">
                <img src="{{ pub.image | relative_url }}" alt="{{ pub.alt }}" class="img-fluid">
              </a>
            </div>
            <div class="card-content">
              {% if pub.date %}
                <div class="card-date">{{ pub.date | date: '%B %d, %Y' }}</div>
              {% endif %}
              <div class="card-title">
                {% if pub.url and pub.url != '' %}
                  {% if pub.first_sentence_with_link %}
                    <span class="first-sentence"><a href="{{ pub.url }}" target="_blank">{{ pub.title }}</a>.</span>
                  {% else %}
                    <a href="{{ pub.url }}" target="_blank">{{ pub.title }}</a>
                  {% endif %}
                {% else %}
                  {{ pub.title }}
                {% endif %}
              </div>
              <div class="card-description">
                {% if pub.first_sentence_with_link %}
                  {{ pub.remaining_description }}
                {% elsif pub.first_sentence %}
                  <span class="first-sentence">{{ pub.first_sentence }}</span> {{ pub.remaining_description }}
                {% else %}
                  {{ pub.description }}
                {% endif %}
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    {% endif %}

    {{ content }}
  </article>
</div>
