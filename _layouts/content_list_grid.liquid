---
layout: default
---
<!--
  Grid-Based Content List Layout

  Alternative layout for brain viewers, tutorials, code, and data using a card-based grid system.
  Provides a more visual, gallery-style presentation compared to the linear list layout.

  Features:
  - Responsive 2-3 column grid
  - Card-based design with hover effects
  - Larger, more prominent images
  - Better use of horizontal space

  Usage: Set layout: content_list_grid in page front matter and provide content_items array
-->

<div class="post">
  <header class="post-header">
    <h1 class="post-title">
      {% if site.enable_navbar_social %}
        {{ page.title }}
        <div class="social">
          <div class="contact-icons">
            {% include social.liquid %}
          </div>
        </div>
      {% else %}
        {{ page.title }}
      {% endif %}
    </h1>
    <p class="post-description">{{ page.description }}</p>
  </header>

  <article>
    <!-- Intro content before items -->
    {{ content }}

    <!-- Content items in grid format -->
    {% if page.content_items %}
      <div class="content-grid">
        {% for item in page.content_items %}
          <div class="content-card">
            <div class="card-image">
              <a href="{{ item.url }}" target="_blank">
                <img src="{{ item.image | relative_url }}" alt="{{ item.alt }}" class="img-fluid">
              </a>
            </div>
            <div class="card-content">
              <div class="card-title">
                {% if item.first_sentence_with_link %}
                  <span class="first-sentence"
                    ><a href="{{ item.url }}" target="_blank">{{ item.title }}</a>.</span
                  >
                {% elsif item.first_sentence %}
                  <span class="first-sentence">{{ item.first_sentence }}</span>
                {% else %}
                  <a href="{{ item.url }}" target="_blank">{{ item.title }}</a>
                {% endif %}
              </div>
              <div class="card-description">
                {% if item.first_sentence_with_link or item.first_sentence %}
                  {{ item.remaining_description }}
                {% else %}
                  {{ item.description }}
                {% endif %}
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    {% endif %}
  </article>
</div>
