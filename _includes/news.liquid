<div class="news">
  {% if site.news != blank %}
    {% assign news_size = site.news | size %}
    <div
      class="table-responsive{% if include.limit and page.announcements.scrollable and news_size > 3 %} news-scrollable{% endif %}"
    >
      <table class="table table-sm table-borderless">
        {% assign news = site.news | reverse %}

        <!-- Filter news by date if limit is set (for homepage) -->
        {% if include.limit %}
          {% assign one_year_ago = 'now' | date: '%s' | minus: 31536000 | plus: 0 %}
          {% assign recent_news = '' | split: '' %}
          {% for item in news %}
            {% assign item_timestamp = item.date | date: '%s' | plus: 0 %}
            {% if item_timestamp >= one_year_ago %}
              {% assign recent_news = recent_news | push: item %}
            {% endif %}
          {% endfor %}
          {% assign news = recent_news %}
        {% endif %}

        {% if include.limit and page.announcements.limit %}
          {% assign news_limit = page.announcements.limit %}
        {% else %}
          {% assign news_limit = news.size %}
        {% endif %}
        {% for item in news limit: news_limit %}
          <tr>
            <th scope="row" class="news-date-column">{{ item.date | date: '%b %d, %Y' }}</th>
            <td>
              {% if item.inline %}
                {% if item.first_sentence_with_link %}
                  {% if item.image %}
                    <img
                      src="{{ item.image | relative_url }}"
                      alt="{{ item.alt | default: 'News image' }}"
                      style="width: 60px; height: auto; max-height: 80px; object-fit: contain; border-radius: 4px; float: left; margin-right: 10px;"
                    >
                  {% endif %}
                  <span class="first-sentence"
                    ><a href="{{ item.url }}">{{ item.title }}</a>.</span
                  >
                  {{ item.remaining_description }}
                {% elsif item.first_sentence %}
                  {% if item.image %}
                    <img
                      src="{{ item.image | relative_url }}"
                      alt="{{ item.alt | default: 'News image' }}"
                      style="width: 60px; height: auto; max-height: 80px; object-fit: contain; border-radius: 4px; float: left; margin-right: 10px;"
                    >
                  {% endif %}
                  <span class="first-sentence">{{ item.first_sentence }}</span> {{ item.remaining_description }}
                {% else %}
                  {{ item.content | remove: '<p>' | remove: '</p>' | emojify }}
                {% endif %}
              {% else %}
                <a class="news-title" href="{{ item.url | relative_url }}">{{ item.title }}</a>
              {% endif %}
            </td>
          </tr>
        {% endfor %}
      </table>
    </div>
  {% else %}
    <p>No news so far...</p>
  {% endif %}
</div>
